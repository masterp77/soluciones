<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_x="167dp"
                android:layout_y="95dp"
                android:indeterminate="true" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="47dp"
                android:layout_y="371dp"
                android:text="Enlace Android"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivAndroid"
                android:layout_width="58dp"
                android:layout_height="52dp"
                android:layout_x="148dp"
                android:layout_y="355dp"
                app:srcCompat="@drawable/ps" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="228dp"
                android:layout_y="370dp"
                android:text="Enlace iOS"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivIOS"
                android:layout_width="51dp"
                android:layout_height="50dp"
                android:layout_x="301dp"
                android:layout_y="356dp"
                app:srcCompat="@drawable/ios" />

            <TextView
                android:id="@+id/tvdatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="7dp"
                android:layout_y="126dp"
                android:text="Datos usados:"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvdesarro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="9dp"
                android:layout_y="73dp"
                android:text="Desarrollador:"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="10dp"
                android:layout_y="173dp"
                android:text="Tipo de Aplicación:"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTipo"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_x="141dp"
                android:layout_y="176dp" />

            <TextView
                android:id="@+id/tvDatos"
                android:layout_width="272dp"
                android:layout_height="34dp"
                android:layout_x="109dp"
                android:layout_y="126dp" />

            <TextView
                android:id="@+id/tvDes"
                android:layout_width="280dp"
                android:layout_height="34dp"
                android:layout_x="108dp"
                android:layout_y="71dp" />

            <TextView
                android:id="@+id/nombreTextView"
                android:layout_width="306dp"
                android:layout_height="35dp"
                android:layout_x="74dp"
                android:layout_y="14dp"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="12dp"
                android:layout_y="17dp"
                android:text="Nombre;"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="286dp"
                android:layout_height="130dp"
                android:layout_x="96dp"
                android:layout_y="210dp" />

            <TextView
                android:id="@+id/tvdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="12dp"
                android:layout_y="215dp"
                android:text="Descripción:"
                android:textColor="?attr/colorControlNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_x="3dp"
                android:layout_y="497dp"
                android:text="------------------------------------------------------------------------------------------------------------" />

        </AbsoluteLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>